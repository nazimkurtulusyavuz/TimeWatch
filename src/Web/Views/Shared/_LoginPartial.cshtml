@using Microsoft.AspNetCore.Identity
@using Infrastructure.Identity;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark d-xs-flex d-sm-none d-lg-flex" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="btn-group" role="group">
            <button type="button" class="btn dropdown-toggle text-left d-none d-sm-flex" data-toggle="dropdown">
                <i class="fas fa-user fa-lg text-black-50"></i>
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                <a class="dropdown-item nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>                               
            </div>
        </li>
        <li class="d-block d-sm-none">
            <a class="dropdown-item nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
            <a class="dropdown-item nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
