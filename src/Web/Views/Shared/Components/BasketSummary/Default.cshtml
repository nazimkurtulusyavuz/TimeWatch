@model BasketViewModel
@using System.Text.Json;

<h4 class="d-flex justify-content-between align-items-center mb-3">
    <span class="text-primary">Basket Summary</span>
    <span class="badge badge-secondary badge-pill bg-primary">@Model.Items.Count</span>
</h4>
<ul class="list-group mb-3">
    @foreach (var item in Model.Items)
    {
        <li class="list-group-item d-flex justify-content-between lh-condensed">
            <div>
                <h6 class="my-0">@item.ProductName</h6>
                <small class="text-muted">@(item.PriceUsd) x @(item.Quantity)</small>
            </div>
            <span class="text-muted">@item.TotalPriceUsd</span>
        </li>
    }
    <li class="list-group-item d-flex justify-content-between lh-condensed">
        <div>
            <h6 class="my-0">Shipping</h6>
            @*<small class="text-muted">@(item.PriceUsd) x @(item.Quantity)</small>*@
        </div>
        <span class="text-muted">$0</span>
    </li>
    <li class="list-group-item d-flex justify-content-between">
        <span class="font-weight-bolder"><span class="text-primary">Total</span> (USD-Including Tax)</span>
        <strong class="text-primary">@Model.TotalPriceUsd</strong>
    </li>
</ul>
<input type="hidden" name="basketSummaryJson" value="@JsonSerializer.Serialize(Model)" />