@model List<Category>

@{
    ViewData["Title"] = "Categories";
}


<div class="card">
    <div class="card-body">
        <table id="tblCategories" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td class="text-center">
                            <a asp-controller="Categories" asp-action="Edit" asp-route-id="@category.Id">
                                <i class="fas fa-edit text-info"></i>
                            </a>
                            <a asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id">
                                <i class="fas fa-trash-alt text-danger"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts  {
    <script>

        @{ var message = Context.Request.Query["message"]; }
        @if (message.Count > 0)
        {
            <text>toastr.success("The category has been deleted successfully.");</text>
        }

        $("#tblCategories").DataTable({
            "responsive": true,
            "autoWidth": false,
        });
    </script>
}  